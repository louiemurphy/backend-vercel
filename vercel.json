{
    "version": 2,
    "builds": [
      {
        "src": "server.js",     
        "use": "@vercel/node"    
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",      
        "dest": "/api/$1"        
      }
    ],
    "env": {
      "MONGO_URI": "@mongo_uri" 
    },
    "functions": {
      "api/**/*.js": {
        "memory": 1024,          
        "maxDuration": 10        
      }
    }
  }
  